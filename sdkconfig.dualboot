# S3Watch Dual-Boot Configuration (32MB Flash)
# Use dual-boot partition table
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions_dualboot.csv"
CONFIG_PARTITION_TABLE_FILENAME="partitions_dualboot.csv"
CONFIG_PARTITION_TABLE_OFFSET=0x8000

# Flash size configuration
CONFIG_ESPTOOLPY_FLASHSIZE_32MB=y
CONFIG_ESPTOOLPY_FLASHSIZE="32MB"

# Custom bootloader optimization
CONFIG_BOOTLOADER_COMPILER_OPTIMIZATION_SIZE=y
CONFIG_BOOTLOADER_LOG_LEVEL_INFO=y

# OTA support
CONFIG_APP_BUILD_TYPE_APP_2NDBOOT=y
